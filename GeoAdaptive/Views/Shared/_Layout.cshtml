@using Combres.Mvc;
@using Combres.Mvc;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - GeoAdaptive</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Url.CombresLink("siteCss")
    @Url.CombresLink("siteJs")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">GeoAdaptive</p>
            </div>
        </div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Roberto Messora, <a target="_blank" href="https://twitter.com/robymes">@@robymes</a></p>
            </div>
        </div>
    </footer>
</body>
</html>
